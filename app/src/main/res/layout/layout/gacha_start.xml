<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleX="1.2"
        android:src="@drawable/title_background" />

        <ImageView
            android:layout_marginTop="50dp"
            android:id="@+id/gacha_information"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            android:scaleX="1.6"
            android:scaleY="1.1"
            android:src="@drawable/gacha_information"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="60dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/caption03"
            android:scaleY="1.6"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ガチャを回す"
            android:textColor="@color/White"
            android:textSize="40dp" />

        </FrameLayout>

        <ImageView
            android:id="@+id/gacha_start_button"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/button02_05"
            android:layout_gravity="bottom"
            />
</FrameLayout>